datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id         String   @id @default(cuid())
  actorId    String
  actorName  String
  group      String
  action     Action   @relation(fields: [actionId], references: [id])
  targetId   String
  targetName String
  location   String
  occurredAt DateTime @default(now())
  metadata   Json
  actionId   String
}

model Action {
  id    String  @id @default(cuid())
  name  String
  Event Event[]
}
